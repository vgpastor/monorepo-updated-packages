{
  "name": "monorepo-updated-packages",
  "version": "1.1",
  "private": true,
  "description": "Monorepos projects modified detector based in Git",
  "main": "lib/main.js",
  "scripts": {
    "run": "ts-node src/main.ts",
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "pack": "npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vgpastor/monorepo-updated-packages.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Víctor García Pastor",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "simple-git": "^3.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.8",
    "@typescript-eslint/parser": "^5.59.6",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.41.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
